<%- include('../template/header'); %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1><%= heading %></h1>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <% if(message){ %>
      <div class="alert alert-<%= message.type; %> alert-dismissible fade show" role="alert">
        <strong><%= message.message; %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } %>
      <!-- SELECT2 EXAMPLE -->
      <div class="card card-default">
        <div class="card-header">
          <h3 class="card-title"><%= sub_heading %></h3>
          <!-- <div class="card-tools">
            <a href="/admin/request_edit?id=0" class="btn btn-primary">Add New</a>
          </div> -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <form action="/request_edit" method="post">
            <div class="row" id="divToPrint">
              <div class="col-md-12">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <!-- <th></th> -->
                      <th>#</th>
                      <th>Date</th>
                      <th>User</th>
                      <th>Rating</th>
                      <th>Remarks</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(req_dt.suc > 0){ var i = 1; req_dt.msg.forEach((dt) =>
                    { %>
                    <tr>
                      <td><%= i %></td>
                      <td><%= dateFormat(dt.CREATED_AT, "dd/mm/yyyy") %></td>
                      <td><%= dt.CREATED_BY %></td>
                      <td><%= dt.RATING %></td>
                      <td><%= dt.REMARKS %></td>
                    </tr>
                    <% i++; }) }else{ %>
                    <tr>
                      <td colspan="5" class="text-center">No data found</td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>

            <!-- <center>
              <button
                type="button"
                class="btn btn-outline-success mt-4"
                onclick="printDiv()"
              >
                Print
              </button>
            </center> -->
          </form>
        </div>
      </div>
      <!-- /.card -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%- include('../template/footer'); %>

