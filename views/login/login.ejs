<%- include('../template/login_header') %>
<div class="login-box login-boxCuston">
  <% if(message){ %>
  <div class="alert alert-<%= message.type; %> alert-dismissible fade show" role="alert">
    <strong>
      <%= message.message; %>
    </strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %>
  <!-- /.login-logo -->
  <div class="card card-outline card-outlineCustom card-primary">
    <div class="card-header text-center">
      <a href="/" class="h1 logoLogin"><img src="/dist/img/logo.png" alt="PURDCS"></a>
    </div>
    <div class="card-body card_bodyCustom">

      <form action="/admin/login" method="post">
        <div class="input-group mb-3 mb3Custom">
          <input type="text" class="form-control form_controlCustomLogin" name="user_id" id="user_id" placeholder="User ID">
        </div>
        <div class="input-group mb-3 mb3Custom">
          <input type="password" class="form-control form_controlCustomLogin" name="password" id="password" placeholder="Password">
        </div>
        <div class="row">
          <div class="col-8">
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
      </form>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</div>
<!-- /.login-box -->
<%- include('../template/login_footer') %>